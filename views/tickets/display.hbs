<div class="row">
    <div class="col s12 m8">
        <h3>{{ticket.title}}
            <small>{{{editIcon ticket.author user ticket._id false}}}</small>
        </h3>

        <div class="card ticket">
            <div class="card-content">
                <span class="card-title">{{formatDate ticket.createdAt "LLL"}}</span>
                {{{ticket.body}}}
            </div>
        </div>
    </div>

    <div class="col s12 m4">
        <div class="card center-align">
            <div class="card-content">
                <span class="card-title">{{ticket.author.displayName}}</span>
                <img src="{{ticket.author.image}}" alt="" class="circle responsive-img img-small">
            </div>

            <div class="card-action">
                <a href="/tickets/user/{{ticket.author._id}}">More From {{ticket.author.firstName}}</a>
            </div>
        </div>
    </div>
</div>