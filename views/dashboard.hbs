<h6>Dashboard</h6>
<h3>Welcome {{userName}}</h3>
<p>Your tickets</p>
{{#if tickets}}
  <table class="striped">
    <thead>
      <tr>
        <th>Title</th>
        <th>Date</th>
        <th>Status</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      {{#each tickets}}
        <tr>
          <td><a href="/tickets/{{_id}}">{{title}}</a></td>
          <td>{{formatDate createdAt "LLL"}}</td>
          <td><span class="dash-status">{{status}}</span></td>
          <td>
            <a href="/tickets/edit/{{_id}}" class="btn btn-float">
              <i class="fas fa-edit"></i>
            </a>

            <form action="/tickets/{{_id}}" method="post" id="delete-form">
              <input type="hidden" name="_method" value="DELETE">
              <button type="submit" class="btn red">
                <i class="fas fa-trash"></i>
              </button>
            </form>
          </td>
        </tr>
      {{/each}}
    </tbody>
  </table>
{{else}}
  <h6>No Tickets Yet</h6>
{{/if}}